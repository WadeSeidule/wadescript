{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "WadeScript",
  "scopeName": "source.wadescript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#fstrings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#function-definition" },
    { "include": "#class-definition" },
    { "include": "#function-call" },
    { "include": "#decorators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.wadescript",
      "match": "#.*$"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wadescript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wadescript",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.wadescript",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.wadescript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "fstrings": {
      "patterns": [
        {
          "name": "string.interpolated.wadescript",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wadescript",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.wadescript",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "#identifiers" },
                { "include": "#operators" }
              ]
            }
          ]
        },
        {
          "name": "string.interpolated.wadescript",
          "begin": "f'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.wadescript",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.wadescript",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "#identifiers" },
                { "include": "#operators" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.wadescript",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.wadescript",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wadescript",
          "match": "\\b(if|elif|else|while|for|in|return|break|continue|pass|try|except|finally|raise|import|as)\\b"
        },
        {
          "name": "keyword.other.wadescript",
          "match": "\\b(def|class|assert)\\b"
        },
        {
          "name": "keyword.operator.logical.wadescript",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "types": {
      "name": "support.type.wadescript",
      "match": "\\b(int|float|str|bool|void|list|dict|array|Optional)\\b"
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.wadescript",
          "match": "\\b(True|False)\\b"
        },
        {
          "name": "constant.language.none.wadescript",
          "match": "\\b(None)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.wadescript",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.wadescript",
          "match": "\\+=|-=|\\*=|/=|="
        },
        {
          "name": "keyword.operator.arithmetic.wadescript",
          "match": "\\+\\+|--|\\+|-|\\*\\*|\\*|//|/|%"
        },
        {
          "name": "keyword.operator.arrow.wadescript",
          "match": "->"
        }
      ]
    },
    "function-definition": {
      "match": "\\b(def)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "keyword.other.wadescript" },
        "2": { "name": "entity.name.function.wadescript" }
      }
    },
    "class-definition": {
      "match": "\\b(class)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
      "captures": {
        "1": { "name": "keyword.other.wadescript" },
        "2": { "name": "entity.name.class.wadescript" }
      }
    },
    "function-call": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.call.wadescript" }
      }
    },
    "decorators": {
      "match": "(@)([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "punctuation.definition.decorator.wadescript" },
        "2": { "name": "entity.name.function.decorator.wadescript" }
      }
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.parameter.self.wadescript",
          "match": "\\bself\\b"
        },
        {
          "name": "variable.other.wadescript",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
